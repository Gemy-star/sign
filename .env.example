# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
# Set which settings module to use:
# - core.settings.local (for development)
# - core.settings.production (for production)
DJANGO_SETTINGS_MODULE=core.settings.local

# =============================================================================
# DJANGO CORE SETTINGS
# =============================================================================
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Local Development: SQLite is used by default
# Production: PostgreSQL (uncomment and configure below)
# DB_NAME=motivational_db
# DB_USER=postgres
# DB_PASSWORD=your-db-password
# DB_HOST=localhost
# DB_PORT=5432

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================
# These values are also managed via django-constance (can be changed in admin)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo

# =============================================================================
# TAP PAYMENT GATEWAY CONFIGURATION
# =============================================================================
# These values are also managed via django-constance (can be changed in admin)
TAP_API_KEY=your-tap-api-key-here
TAP_SECRET_KEY=your-tap-secret-key-here
TAP_BASE_URL=https://api.tap.company/v2

# =============================================================================
# SITE CONFIGURATION
# =============================================================================
SITE_URL=http://localhost:8000

# =============================================================================
# CORS SETTINGS
# =============================================================================
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CSRF_TRUSTED_ORIGINS=http://localhost:8000

# =============================================================================
# EMAIL CONFIGURATION (Production)
# =============================================================================
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# DEFAULT_FROM_EMAIL=noreply@motivationalapp.com
# SERVER_EMAIL=admin@motivationalapp.com

# =============================================================================
# REDIS CONFIGURATION (Production - Optional)
# =============================================================================
# REDIS_URL=redis://127.0.0.1:6379/1

# =============================================================================
# ADMIN CONFIGURATION
# =============================================================================
# ADMIN_EMAIL=admin@motivationalapp.com

# =============================================================================
# SECURITY (Production)
# =============================================================================
# Only needed in production
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True

# =============================================================================
# NOTES
# =============================================================================
# 1. Copy this file to .env and fill in your actual values
# 2. Never commit .env to version control
# 3. Many settings can be changed dynamically via Django Admin (Constance)
# 4. See SETTINGS_MIGRATION.md for detailed configuration guide
